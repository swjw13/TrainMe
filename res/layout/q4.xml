<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Q4">

    <TextView
        android:id="@+id/q_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="운동 목적 ? "
        android:textSize="25dp" />

    <EditText
        android:id="@+id/ans_goal"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:hint="운동 목적을 적어주세요" />

    <TextView
        android:id="@+id/q_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="원하는 요일 / 시간 ? "
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/ans_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center" />

        <Spinner
            android:id="@+id/ans_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </LinearLayout>

    <TextView
        android:id="@+id/availabledayList"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:hint="가능한 시간이 여기에 표시됩니다" />

    <TextView
        android:id="@+id/q_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="원하는 점? "
        android:textSize="25dp" />

    <EditText
        android:id="@+id/ans_extra"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:gravity="center" />

    <Button
        android:id="@+id/q4_nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음" />

</LinearLayout>