<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".TrainerActivity.Q8_trainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/seekbar8"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:backgroundTint="#FF5722"
            android:foregroundTint="#FF5722"
            android:max="10"
            android:progress="7"
            android:progressBackgroundTint="#FF9800"
            android:progressTint="#FF5722"
            android:thumbTint="#FF5722"
            app:tickMarkTint="#FF5722" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:paddingHorizontal="70dp"
                    android:paddingTop="10dp"
                    android:text="가격"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/skipButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:backgroundTint="#FF5722"
                    android:text="SKIP"
                    android:textSize="25sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="트레이너님의\nPT기준 가격을 알려주세요"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/Pt_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/roundbox"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/roundbox"
                    android:paddingHorizontal="40dp"
                    android:paddingVertical="5dp"
                    android:text="10회" />

                <EditText
                    android:scrollHorizontally="false"
                    android:id="@+id/price_10timesEditText"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/roundbox"
                    android:paddingHorizontal="40dp"
                    android:paddingVertical="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/roundbox"
                    android:paddingHorizontal="40dp"
                    android:paddingVertical="5dp"
                    android:text="20회" />

                <EditText
                    android:scrollHorizontally="false"
                    android:id="@+id/price_20timeEditText"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/roundbox"
                    android:paddingHorizontal="40dp"
                    android:paddingVertical="5dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="PT 1회 진행 시간은 얼마나 되나요?"
                android:textSize="20sp" />

            <EditText
                android:scrollHorizontally="false"
                android:id="@+id/time_per_Once"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundbox"
                android:padding="10dp"
                android:gravity="center"
                android:hint="    분 단위로 입력해주세요"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="공간에 대한 추가금이 발생하나요?"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/if_additional_money_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/additional_money_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예" />

                <RadioButton
                    android:id="@+id/additional_money_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아니오" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="가격 참고사항을 말해주세요"
                android:textSize="20sp" />

            <EditText
                android:scrollHorizontally="false"
                android:id="@+id/price_specific"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="20sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/nextButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="20dp"
                android:src="@android:drawable/ic_media_next" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>