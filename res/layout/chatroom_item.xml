<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/mine"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

<!--        <TextView-->
<!--            android:id="@+id/my_name"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="name"-->
<!--            android:textColor="#333333"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_marginRight="16dp"/>-->

        <TextView
            android:id="@+id/my_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello android"
            android:layout_below="@+id/my_name"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            android:maxWidth="200dp"
            android:background="@drawable/back_et_mymsgbox"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/my_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:35"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/my_text"
            android:layout_marginRight="8dp"
            android:layout_alignBottom="@id/my_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/others"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/other_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bonobono"/>
        <TextView
            android:id="@+id/other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#333333"
            android:layout_toRightOf="@+id/other_img"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/other_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello android"
            android:layout_below="@+id/other_name"
            android:layout_toRightOf="@id/other_img"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:maxWidth="200dp"
            android:background="@drawable/back_et_othermsgbox"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/other_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:35"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/other_msg"
            android:layout_marginLeft="8dp"
            android:layout_alignBottom="@id/other_msg"/>
    </RelativeLayout>


</LinearLayout>