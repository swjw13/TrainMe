<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:foregroundTint="#FF5722"
    tools:context=".TrainerActivity.Q3_trainer">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nextButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
        android:id="@+id/seekbar3"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:max="10"
        android:progress="2"
        android:progressTint="#FF5722"
        android:thumbTint="#FF5722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="70dp"
        android:text="소개"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/seekbar3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="트레이너님의 소개글을\n구체적으로 작성해주세요!"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/seekbar3"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <EditText
        android:id="@+id/trainer_specific_info"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:gravity="center"
        android:hint="자유롭게 작성해 주세요!"
        android:scrollHorizontally="false"
        app:layout_constraintStart_toEndOf="@+id/seekbar3"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <Button
        android:id="@+id/trainer_q3_skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40dp"
        android:background="#FF5722"
        android:backgroundTint="#FF5722"
        android:foregroundTint="#FF5722"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textcount3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="0 / 300"
        app:layout_constraintEnd_toEndOf="@+id/trainer_specific_info"
        app:layout_constraintTop_toBottomOf="@+id/trainer_specific_info" />

</androidx.constraintlayout.widget.ConstraintLayout>